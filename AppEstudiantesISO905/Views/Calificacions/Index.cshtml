@model IEnumerable<AppEstudiantesISO905.Domain.Models.Calificacion>

@{
    ViewData["Title"] = "Calificaciones";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.0/dist/css/bootstrap.min.css" rel="stylesheet">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />

<style>
    body {
        background-color: hsl(218, 41%, 15%);
        color: hsl(218, 81%, 95%);
        min-height: 100vh;
    }

    h1 {
        color: hsl(218, 81%, 95%);
        margin-bottom: 2rem;
    }

    a, .btn {
        color: hsl(218, 81%, 75%);
    }

        a:hover, .btn:hover {
            color: #fff;
            text-decoration: none;
        }

    .table-container {
        background-color: hsl(218, 41%, 20%);
        padding: 3rem 2rem;
        border-radius: 1rem;
        box-shadow: 0 0 25px rgba(0,0,0,0.5);
        max-width: 95%;
        margin: 2rem auto;
    }

    .table {
        background-color: hsl(218, 41%, 25%);
        color: hsl(218, 81%, 95%);
        border-radius: 0.5rem;
        overflow: hidden;
    }

        .table thead {
            background-color: hsl(218, 41%, 30%);
        }

        .table th, .table td {
            vertical-align: middle;
            border: none;
        }

        .table tbody tr:hover {
            background-color: hsl(218, 41%, 35%);
        }

    .btn-action {
        background-color: hsl(218, 41%, 35%);
        border: none;
        color: hsl(218, 81%, 95%);
        width: 40px;
        height: 40px;
        display: inline-flex;
        justify-content: center;
        align-items: center;
        border-radius: 0.5rem;
        margin: 0 2px;
    }

        .btn-action:hover {
            background-color: hsl(218, 41%, 45%);
            color: #fff;
        }

        .btn-action i {
            font-size: 1.1rem;
        }

    .btn-create {
        background-color: hsl(218, 41%, 35%);
        color: hsl(218, 81%, 95%);
    }

        .btn-create:hover {
            background-color: hsl(218, 41%, 45%);
            color: #fff;
        }

    .alert {
        border-radius: 0.5rem;
    }
</style>

<div class="container my-5 table-container">
    <h1>Calificaciones</h1>

    <!-- Manejo de errores -->
    @if (!ViewData.ModelState.IsValid)
    {
        <div class="alert alert-danger mb-3">
            @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
            {
                <p class="mb-0">@error.ErrorMessage</p>
            }
        </div>
    }

    <p>
        <a asp-action="Create" class="btn btn-create"><i class="fas fa-plus me-1"></i> Crear Nueva</a>
    </p>

    <div class="table-responsive">
        <table class="table table-hover align-middle text-center">
            <thead>
                <tr>
                    <th>@Html.DisplayNameFor(model => model.First().Calificacion1)</th>
                    <th>@Html.DisplayNameFor(model => model.First().Calificacion2)</th>
                    <th>@Html.DisplayNameFor(model => model.First().Calificacion3)</th>
                    <th>@Html.DisplayNameFor(model => model.First().Calificacion4)</th>
                    <th>@Html.DisplayNameFor(model => model.First().Examen)</th>
                    <th>@Html.DisplayNameFor(model => model.First().PromedioCalificaciones)</th>
                    <th>@Html.DisplayNameFor(model => model.First().TotalCalificacion)</th>
                    <th>@Html.DisplayNameFor(model => model.First().Clasificacion)</th>
                    <th>@Html.DisplayNameFor(model => model.First().Estado)</th>
                    <th>Estudiante</th>
                    <th>Materia</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
                @if (Model != null && Model.Any())
                {
                    foreach (var item in Model)
                    {
                        <tr>
                            <td>@Html.DisplayFor(modelItem => item.Calificacion1)</td>
                            <td>@Html.DisplayFor(modelItem => item.Calificacion2)</td>
                            <td>@Html.DisplayFor(modelItem => item.Calificacion3)</td>
                            <td>@Html.DisplayFor(modelItem => item.Calificacion4)</td>
                            <td>@Html.DisplayFor(modelItem => item.Examen)</td>
                            <td>@Html.DisplayFor(modelItem => item.PromedioCalificaciones)</td>
                            <td>@Html.DisplayFor(modelItem => item.TotalCalificacion)</td>
                            <td>@Html.DisplayFor(modelItem => item.Clasificacion)</td>
                            <td>@Html.DisplayFor(modelItem => item.Estado)</td>
                            <td>@Html.DisplayFor(modelItem => item.Estudiante.Matricula)</td>
                            <td>@Html.DisplayFor(modelItem => item.Materia.Nombre)</td>
                            <td>
                                <button class="btn btn-action" data-bs-toggle="tooltip" title="Editar" onclick="location.href='@Url.Action("Edit", new { id = item.Id })'">
                                    <i class="fas fa-edit"></i>
                                </button>
                                <button class="btn btn-action" data-bs-toggle="tooltip" title="Detalles" onclick="location.href='@Url.Action("Details", new { id = item.Id })'">
                                    <i class="fas fa-info-circle"></i>
                                </button>
                                <button class="btn btn-action" data-bs-toggle="tooltip" title="Eliminar" onclick="location.href='@Url.Action("Delete", new { id = item.Id })'">
                                    <i class="fas fa-trash-alt"></i>
                                </button>
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="12" class="text-center text-muted">No hay calificaciones registradas.</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.0/dist/js/bootstrap.bundle.min.js"></script>
<script>
    var tooltipTriggerList = [].slice.call(document.querySelectorAll('[data-bs-toggle="tooltip"]'))
    var tooltipList = tooltipTriggerList.map(function (tooltipTriggerEl) {
        return new bootstrap.Tooltip(tooltipTriggerEl)
    })
</script>
