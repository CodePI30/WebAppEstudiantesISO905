@model AppEstudiantesISO905.Domain.Models.Calificacion

@{
    ViewData["Title"] = "Details";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.0/dist/css/bootstrap.min.css" rel="stylesheet">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />

<style>
    body {
        background-color: hsl(218, 41%, 15%);
        color: hsl(218, 81%, 85%);
        min-height: 100vh;
    }

    h1, h2, h4 {
        color: hsl(218, 81%, 95%);
    }

    hr {
        border-color: hsl(218, 41%, 30%);
    }

    .card-details {
        background-color: hsl(218, 41%, 20%);
        padding: 2rem;
        border-radius: 1rem;
        box-shadow: 0 .25rem .75rem rgba(0, 0, 0, .2);
    }

    .text-label {
        color: hsl(218, 81%, 75%);
    }

    .text-value {
        color: hsl(218, 81%, 85%);
    }

    .btn-primary {
        background-color: hsl(218, 81%, 75%);
        border-color: hsl(218, 81%, 75%);
        color: hsl(218, 41%, 15%);
        font-weight: bold;
    }

        .btn-primary:hover {
            background-color: hsl(218, 81%, 65%);
            border-color: hsl(218, 81%, 65%);
            color: hsl(218, 41%, 15%);
        }

    .btn-secondary {
        background-color: hsl(218, 41%, 25%);
        border-color: hsl(218, 41%, 35%);
        color: hsl(218, 81%, 75%);
    }

        .btn-secondary:hover {
            background-color: hsl(218, 41%, 35%);
            color: hsl(218, 81%, 75%);
        }
</style>

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card-details">
                <h2><i class="fas fa-clipboard-list me-2"></i>Detalle de la Calificación</h2>
                <hr />

                <dl class="row mb-0">
                    <dt class="col-sm-4 text-label">Calificación 1:</dt>
                    <dd class="col-sm-8 text-value">@Html.DisplayFor(model => model.Calificacion1)</dd>

                    <dt class="col-sm-4 text-label">Calificación 2:</dt>
                    <dd class="col-sm-8 text-value">@Html.DisplayFor(model => model.Calificacion2)</dd>

                    <dt class="col-sm-4 text-label">Calificación 3:</dt>
                    <dd class="col-sm-8 text-value">@Html.DisplayFor(model => model.Calificacion3)</dd>

                    <dt class="col-sm-4 text-label">Calificación 4:</dt>
                    <dd class="col-sm-8 text-value">@Html.DisplayFor(model => model.Calificacion4)</dd>

                    <dt class="col-sm-4 text-label">Examen:</dt>
                    <dd class="col-sm-8 text-value">@Html.DisplayFor(model => model.Examen)</dd>

                    <dt class="col-sm-4 text-label">Promedio:</dt>
                    <dd class="col-sm-8 text-value">@Html.DisplayFor(model => model.PromedioCalificaciones)</dd>

                    <dt class="col-sm-4 text-label">Total:</dt>
                    <dd class="col-sm-8 text-value">@Html.DisplayFor(model => model.TotalCalificacion)</dd>

                    <dt class="col-sm-4 text-label">Clasificación:</dt>
                    <dd class="col-sm-8 text-value">@Html.DisplayFor(model => model.Clasificacion)</dd>

                    <dt class="col-sm-4 text-label">Estado:</dt>
                    <dd class="col-sm-8 text-value">@Html.DisplayFor(model => model.Estado)</dd>

                    <dt class="col-sm-4 text-label">Estudiante:</dt>
                    <dd class="col-sm-8 text-value">@Html.DisplayFor(model => model.Estudiante.Apellido)</dd>

                    <dt class="col-sm-4 text-label">Materia:</dt>
                    <dd class="col-sm-8 text-value">@Html.DisplayFor(model => model.Materia.Nombre)</dd>
                </dl>

                <div class="d-flex justify-content-between mt-4">
                    <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-primary">
                        <i class="fas fa-edit me-1"></i> Editar
                    </a>
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="fas fa-arrow-left me-1"></i> Volver
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
