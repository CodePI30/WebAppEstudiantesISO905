@{
    Layout = null;
    ViewData["Title"] = "Home Page";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.0/dist/css/bootstrap.min.css" rel="stylesheet">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />

<style>
    html, body {
        width: 100%;
        height: 100%;
        margin: 0;
        padding: 0;
        overflow-x: hidden; /* evita scroll horizontal */
    }

    /* Fondo radial oscuro */
    .background-radial-gradient {
        background-color: hsl(218, 41%, 15%);
        background-image: 
            radial-gradient(650px circle at 0% 0%, hsl(218,41%,35%) 15%, hsl(218,41%,30%) 35%, hsl(218,41%,20%) 75%, hsl(218,41%,19%) 80%, transparent 100%),
            radial-gradient(1250px circle at 100% 100%, hsl(218,41%,45%) 15%, hsl(218,41%,30%) 35%, hsl(218,41%,20%) 75%, hsl(218,41%,19%) 80%, transparent 100%);
        width: 100%;
        min-height: 100vh;
        display: flex;
        flex-direction: column;
        position: relative;
    }

    #radius-shape-1, #radius-shape-2 {
        position: absolute;
        z-index: 1;
    }

    #radius-shape-1 {
        height: 220px; width: 220px;
        top: -60px; left: -130px;
        background: radial-gradient(#44006b, #ad1fff);
        border-radius: 50%;
    }

    #radius-shape-2 {
        width: 300px; height: 300px;
        bottom: -60px; right: -110px;
        border-radius: 38% 62% 63% 37% / 70% 33% 67% 30%;
        background: radial-gradient(#44006b, #ad1fff);
    }

    .card-glass {
        background-color: hsla(0,0%,100%,0.9) !important;
        backdrop-filter: saturate(200%) blur(25px);
        border-radius: 1rem;
        z-index: 2;
    }

    /* Sidebar hamburguesa */
    #sidebarMenu {
        height: 100%;
        width: 0;
        position: fixed;
        top: 0;
        left: 0;
        background-color: hsl(218, 41%, 15%);
        overflow-x: hidden;
        transition: 0.3s;
        padding-top: 60px;
        z-index: 9999;
    }

    #sidebarMenu a {
        padding: 12px 30px;
        text-decoration: none;
        font-size: 1.2rem;
        color: hsl(218, 81%, 75%);
        display: block;
        transition: 0.3s;
    }

    #sidebarMenu a:hover {
        color: #fff;
        background-color: hsl(218, 41%, 25%);
    }

    #sidebarMenu .closebtn {
        position: absolute;
        top: 15px;
        right: 25px;
        font-size: 2rem;
    }

    .menu-btn {
        font-size: 2rem;
        color: hsl(218, 81%, 95%);
        cursor: pointer;
        position: fixed;
        top: 15px;
        left: 15px;
        z-index: 10000;

        background-color: rgba(0, 0, 0, 0.5); /* fondo semitransparente */
        padding: 10px 12px;
        border-radius: 0.5rem;
        transition: all 0.3s ease;
    }

    .menu-btn:hover {
        background-color: rgba(0, 0, 0, 0.7); /* más oscuro al pasar el mouse */
        color: hsl(218, 81%, 85%);
    }

    .menu-btn:active {
        background-color: rgba(0, 0, 0, 0.9); /* mucho más oscuro al hacer click */
        color: hsl(218, 81%, 75%);
        transform: scale(0.95); /* efecto de presión */
    }

    footer {
        background-color: hsl(218, 41%, 10%);
        color: #fff;
        padding: 1.5rem 0;
        margin-top: auto;
    }

    footer a { color: hsl(218, 81%, 75%); text-decoration: none; }
    footer a:hover { text-decoration: underline; }

    /* Textos principales */
    .home-title { color: hsl(218, 81%, 95%); }
    .home-subtitle { color: hsl(218, 81%, 75%); }
    .home-text { color: hsl(218, 81%, 85%); }
</style>

<body class="d-flex flex-column min-vh-100">

    <!-- Botón hamburguesa -->
    <i class="fas fa-bars menu-btn" onclick="openSidebar()"></i>

    <!-- Sidebar -->
    <div id="sidebarMenu">
        <a href="javascript:void(0)" class="closebtn" onclick="closeSidebar()">&times;</a>
        <a href="@Url.Action("Index", "Home")">Inicio</a>
        <a href="@Url.Action("Index", "Usuarios")">Usuarios</a>
    </div>

    <!-- Contenido principal -->
    <section class="background-radial-gradient flex-grow-1 position-relative">
        <div id="radius-shape-1"></div>
        <div id="radius-shape-2"></div>

        <div class="container-fluid py-5 px-4 text-center text-lg-start position-relative" style="z-index:2;">
            <div class="row gx-lg-5 align-items-center">
                <!-- Mensaje de bienvenida -->
                <div class="col-lg-6 mb-5 mb-lg-0 text-white">
                    <h1 class="display-5 fw-bold ls-tight home-title">
                        Bienvenido a StuSYS<br />
                        <span class="home-subtitle">Panel de administración</span>
                    </h1>
                    <p class="mb-4 opacity-75 home-text">
                        Accede a tus módulos y gestiona los usuarios de manera sencilla.
                    </p>
                </div>

                <!-- Tarjetas / accesos -->
                <div class="col-lg-6">
                    <div class="row">
                        <div class="col-md-12 mb-4">
                            <div class="card card-glass shadow-lg h-100">
                                <div class="card-body d-flex flex-column justify-content-center align-items-center">
                                    <i class="fas fa-users fa-3x mb-3" style="color:hsl(218,81%,75%)"></i>
                                    <h5 class="card-title">Usuarios</h5>
                                    <p class="card-text text-center">
                                        Gestiona los usuarios registrados en el sistema.
                                    </p>
                                    <a href="@Url.Action("Index", "Usuarios")" class="btn btn-primary mt-2">Ir a Usuarios</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Footer -->
    <footer class="mt-auto">
        <div class="container text-center">
            &copy; 2025 StuSYS. Todos los derechos reservados.
        </div>
    </footer>

    <script>
        function openSidebar() {
            document.getElementById("sidebarMenu").style.width = "250px";
        }

        function closeSidebar() {
            document.getElementById("sidebarMenu").style.width = "0";
        }
    </script>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
