@{
    Layout = null;
    ViewData["Title"] = "Home Page";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.0/dist/css/bootstrap.min.css" rel="stylesheet">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />

<style>
    html, body {
        width: 100%;
        height: 100%;
        margin: 0;
        padding: 0;
        overflow-x: hidden;
    }

    .background-radial-gradient {
        background-color: hsl(218, 41%, 15%);
        background-image: 
            radial-gradient(650px circle at 0% 0%, hsl(218,41%,35%) 15%, hsl(218,41%,30%) 35%, hsl(218,41%,20%) 75%, hsl(218,41%,19%) 80%, transparent 100%),
            radial-gradient(1250px circle at 100% 100%, hsl(218,41%,45%) 15%, hsl(218,41%,30%) 35%, hsl(218,41%,20%) 75%, hsl(218,41%,19%) 80%, transparent 100%);
        width: 100%;
        min-height: 100vh;
        display: flex;
        flex-direction: column;
        position: relative;
    }

    #radius-shape-1, #radius-shape-2 {
        position: absolute;
        z-index: 1;
    }

    #radius-shape-1 {
        height: 220px; width: 220px;
        top: -60px; left: -130px;
        background: radial-gradient(#44006b, #ad1fff);
        border-radius: 50%;
    }

    #radius-shape-2 {
        width: 300px; height: 300px;
        bottom: -60px; right: -110px;
        border-radius: 38% 62% 63% 37% / 70% 33% 67% 30%;
        background: radial-gradient(#44006b, #ad1fff);
    }

    .card-glass {
        background-color: hsla(0,0%,100%,0.9) !important;
        backdrop-filter: saturate(200%) blur(25px);
        border-radius: 1rem;
        z-index: 2;
    }

    #sidebarMenu {
        height: 100%;
        width: 0;
        position: fixed;
        top: 0;
        left: 0;
        background-color: hsl(218, 41%, 15%);
        overflow-x: hidden;
        transition: 0.3s;
        padding-top: 60px;
        z-index: 9999;
    }

    #sidebarMenu a {
        padding: 12px 30px;
        text-decoration: none;
        font-size: 1.2rem;
        color: hsl(218, 81%, 75%);
        display: block;
        transition: 0.3s;
    }

    #sidebarMenu a:hover {
        color: #fff;
        background-color: hsl(218, 41%, 25%);
    }

    #sidebarMenu .closebtn {
        position: absolute;
        top: 15px;
        right: 25px;
        font-size: 2rem;
    }

    .menu-btn {
        font-size: 2rem;
        color: hsl(218, 81%, 95%);
        cursor: pointer;
        position: fixed;
        top: 15px;
        left: 15px;
        z-index: 10000;

        background-color: rgba(0, 0, 0, 0.5);
        padding: 10px 12px;
        border-radius: 0.5rem;
        transition: all 0.3s ease;
    }

    .menu-btn:hover {
        background-color: rgba(0, 0, 0, 0.7);
        color: hsl(218, 81%, 85%);
    }

    .menu-btn:active {
        background-color: rgba(0, 0, 0, 0.9);
        color: hsl(218, 81%, 75%);
        transform: scale(0.95);
    }

    footer {
        background-color: hsl(218, 41%, 10%);
        color: #fff;
        padding: 1.5rem 0;
        margin-top: auto;
    }

    .logout-link {
        background: none;
        border: none;
        color: #ff4d4d;
        text-decoration: none;
        display: block;
        text-align: left;
        padding: 12px 30px;
        font-size: 1.2rem;
        transition: 0.3s;
        width: 100%;
    }

    .logout-link:hover {
            color: #fff;
            background-color: #cc0000;
            cursor: pointer;
     }

    .carousel-wrapper {
        background: #fff;
        border-radius: 1rem;
        padding: 20px;
    }

    footer a { color: hsl(218, 81%, 75%); text-decoration: none; }
    footer a:hover { text-decoration: underline; }

    .home-title { color: hsl(218, 81%, 95%); }
    .home-subtitle { color: hsl(218, 81%, 75%); }
    .home-text { color: hsl(218, 81%, 85%); }
</style>

<body class="d-flex flex-column min-vh-100">

    <i class="fas fa-bars menu-btn" onclick="openSidebar()"></i>

     <div id="sidebarMenu">
        <a href="javascript:void(0)" class="closebtn" onclick="closeSidebar()">&times;</a>
        <a href="@Url.Action("Index", "Home")">Inicio</a>
        <a href="@Url.Action("Index", "Usuarios")">Usuarios</a>
        <form asp-controller="Auth" asp-action="Logout" method="post" class="d-inline">
            <button type="submit" class="logout-link">Logout</button>
        </form>
     </div>

    <section class="background-radial-gradient flex-grow-1 position-relative">
        <div id="radius-shape-1"></div>
        <div id="radius-shape-2"></div>

        <div class="container-fluid py-5 px-4 text-center text-lg-start position-relative" style="z-index:2;">
            <div class="row gx-lg-5 align-items-center">
                <div class="col-lg-6 mb-5 mb-lg-0 text-white">
                    <h1 class="display-5 fw-bold ls-tight home-title">
                        Bienvenido a StuSYS<br />
                        <span class="home-subtitle">Panel de administración</span>
                    </h1>
                    <p class="mb-4 opacity-75 home-text">
                        Accede a tus módulos y gestiona los usuarios de manera sencilla.
                    </p>
                </div>
                <div class="col-lg-6">
                    <div class="carousel-wrapper shadow-lg p-4 rounded">

                        <div id="carouselDashboard" class="carousel slide" data-bs-ride="carousel">

                            <!-- Indicadores -->
                            <div class="carousel-indicators">
                                <button type="button" data-bs-target="#carouselDashboard" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Usuarios"></button>
                                <button type="button" data-bs-target="#carouselDashboard" data-bs-slide-to="1" aria-label="Estudiantes"></button>
                                <button type="button" data-bs-target="#carouselDashboard" data-bs-slide-to="2" aria-label="Materias"></button>
                                <button type="button" data-bs-target="#carouselDashboard" data-bs-slide-to="3" aria-label="Calificaciones"></button>
                            </div>

                            <!-- Slides -->
                            <div class="carousel-inner text-center">

                                <!-- Usuarios -->
                                <div class="carousel-item active">
                                    <div class="card card-glass p-4 mx-auto border-0" style="max-width: 400px;">
                                        <i class="fas fa-users fa-3x mb-2" style="color:hsl(218,81%,75%)"></i>
                                        <h5 class="card-title">Usuarios</h5>
                                        <p class="card-text small">Gestiona los usuarios registrados en el sistema.</p>
                                        <a href="@Url.Action("Index", "Usuarios")" class="btn btn-primary btn-sm mt-2">Ir a Usuarios</a>
                                    </div>
                                </div>

                                <!-- Estudiantes -->
                                <div class="carousel-item">
                                    <div class="card card-glass p-4 mx-auto border-0" style="max-width: 400px;">
                                        <i class="fas fa-user-graduate fa-3x mb-2" style="color:hsl(48,81%,75%)"></i>
                                        <h5 class="card-title">Estudiantes</h5>
                                        <p class="card-text small">Gestiona los estudiantes registrados en el sistema.</p>
                                        <a href="@Url.Action("Index", "Estudiantes")" class="btn btn-primary btn-sm mt-2">Ir a Estudiantes</a>
                                    </div>
                                </div>

                                <!-- Materias -->
                                <div class="carousel-item">
                                    <div class="card card-glass p-4 mx-auto border-0" style="max-width: 400px;">
                                        <i class="fas fa-book fa-3x mb-2" style="color:hsl(120,81%,75%)"></i>
                                        <h5 class="card-title">Materias</h5>
                                        <p class="card-text small">Gestiona las materias disponibles en el sistema.</p>
                                        <a href="@Url.Action("Index", "Materias")" class="btn btn-primary btn-sm mt-2">Ir a Materias</a>
                                    </div>
                                </div>

                                <!-- Calificaciones -->
                                <div class="carousel-item">
                                    <div class="card card-glass p-4 mx-auto border-0" style="max-width: 400px;">
                                        <i class="fas fa-clipboard-list fa-3x mb-2" style="color:hsl(300,81%,75%)"></i>
                                        <h5 class="card-title">Calificaciones</h5>
                                        <p class="card-text small">Gestiona las calificaciones de los estudiantes.</p>
                                        <a href="@Url.Action("Index", "Calificacions")" class="btn btn-primary btn-sm mt-2">Ir a Calificaciones</a>
                                    </div>
                                </div>

                            </div>

                            <!-- Controles -->
                            <button class="carousel-control-prev" type="button" data-bs-target="#carouselDashboard" data-bs-slide="prev">
                                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                                <span class="visually-hidden">Anterior</span>
                            </button>
                            <button class="carousel-control-next" type="button" data-bs-target="#carouselDashboard" data-bs-slide="next">
                                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                                <span class="visually-hidden">Siguiente</span>
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <footer class="mt-auto">
        <div class="container text-center">
            &copy; 2025 StuSYS. Todos los derechos reservados.
        </div>
    </footer>

    <script>
        function openSidebar() {
            document.getElementById("sidebarMenu").style.width = "250px";
        }

        function closeSidebar() {
            document.getElementById("sidebarMenu").style.width = "0";
        }
    </script>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
