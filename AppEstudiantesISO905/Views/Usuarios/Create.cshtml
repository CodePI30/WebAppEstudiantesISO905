@model AppEstudiantesISO905.Domain.Models.Usuario

@{
    ViewData["Title"] = "Create";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.0/dist/css/bootstrap.min.css" rel="stylesheet">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />

<style>
    body {
        background-color: hsl(218, 41%, 15%);
        color: hsl(218, 81%, 85%);
        min-height: 100vh;
    }

    h1, h4 {
        color: hsl(218, 81%, 95%);
    }

    hr {
        border-color: hsl(218, 41%, 30%);
    }

    .form-control {
        background-color: hsl(218, 41%, 25%);
        color: hsl(218, 81%, 85%);
        border: 1px solid hsl(218, 41%, 35%);
        border-radius: 0.5rem;
    }

        .form-control:focus {
            background-color: hsl(218, 41%, 25%);
            color: hsl(218, 81%, 85%);
            border-color: hsl(218, 81%, 75%);
            box-shadow: none;
        }

    .btn-primary {
        background-color: hsl(218, 81%, 75%);
        border-color: hsl(218, 81%, 75%);
        color: hsl(218, 41%, 15%);
        font-weight: bold;
    }

        .btn-primary:hover {
            background-color: hsl(218, 81%, 65%);
            border-color: hsl(218, 81%, 65%);
            color: hsl(218, 41%, 15%);
        }

    a {
        color: hsl(218, 81%, 75%);
        text-decoration: none;
    }

        a:hover {
            text-decoration: underline;
        }

    .card-create {
        background-color: hsl(218, 41%, 20%);
        padding: 2rem;
        border-radius: 1rem;
        box-shadow: 0 .25rem .75rem rgba(0, 0, 0, .2);
    }

    .alert {
        border-radius: 0.5rem;
    }
</style>

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card-create">
                <h1>Crear Usuario</h1>
                <h4>Detalles del usuario</h4>
                <hr />

                <!-- Mostrar errores globales -->
                @if (ViewData["ErrorMessage"] != null)
                {
                    <div class="alert alert-danger">
                        @ViewData["ErrorMessage"]
                    </div>
                }

                <form asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                    <div class="mb-3">
                        <label asp-for="Nombre" class="form-label"></label>
                        <input asp-for="Nombre" class="form-control" />
                        <span asp-validation-for="Nombre" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Email" class="form-label"></label>
                        <input asp-for="Email" class="form-control" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="PasswordHash" class="form-label"></label>
                        <input asp-for="PasswordHash" class="form-control" />
                        <span asp-validation-for="PasswordHash" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Estado" class="form-label"></label>
                        <select asp-for="Estado" class="form-control">
                            <option value="Activo" selected="@((Model?.Estado == "Activo") ? "selected" : null)">Activo</option>
                            <option value="Inactivo" selected="@((Model?.Estado == "Inactivo") ? "selected" : null)">Inactivo</option>
                        </select>
                        <span asp-validation-for="Estado" class="text-danger"></span>
                    </div>

                    <div class="d-flex justify-content-between align-items-center mt-4">
                        <input type="submit" value="Crear" class="btn btn-primary" />
                        <a asp-action="Index" class="btn btn-outline-light">Volver atras</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
