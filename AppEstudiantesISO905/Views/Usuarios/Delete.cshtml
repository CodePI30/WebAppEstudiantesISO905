@model AppEstudiantesISO905.Domain.Models.Usuario

@{
    ViewData["Title"] = "Delete";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.0/dist/css/bootstrap.min.css" rel="stylesheet">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />

<style>
    body {
        background-color: hsl(218, 41%, 15%);
        color: hsl(218, 81%, 85%);
        min-height: 100vh;
    }

    h1, h3, h4 {
        color: hsl(218, 81%, 95%);
    }

    hr {
        border-color: hsl(218, 41%, 30%);
    }

    .card-delete {
        background-color: hsl(218, 41%, 20%);
        padding: 2rem;
        border-radius: 1rem;
        box-shadow: 0 .25rem .75rem rgba(0, 0, 0, .2);
    }

    .text-label {
        color: hsl(218, 81%, 75%);
    }

    .text-value {
        color: hsl(218, 81%, 85%);
    }

    .btn-primary {
        background-color: hsl(218, 81%, 75%);
        border-color: hsl(218, 81%, 75%);
        color: hsl(218, 41%, 15%);
        font-weight: bold;
    }

    .btn-primary:hover {
        background-color: hsl(218, 81%, 65%);
        border-color: hsl(218, 81%, 65%);
        color: hsl(218, 41%, 15%);
    }

    .btn-danger {
        background-color: hsl(0, 70%, 50%);
        border-color: hsl(0, 70%, 50%);
        color: hsl(218, 41%, 15%);
        font-weight: bold;
    }

    .btn-danger:hover {
        background-color: hsl(0, 70%, 40%);
        border-color: hsl(0, 70%, 40%);
        color: hsl(218, 41%, 15%);
    }

    .btn-secondary {
        background-color: hsl(218, 41%, 25%);
        border-color: hsl(218, 41%, 35%);
        color: hsl(218, 81%, 75%);
    }

    .btn-secondary:hover {
        background-color: hsl(218, 41%, 35%);
        color: hsl(218, 81%, 75%);
    }

    a {
        color: hsl(218, 81%, 75%);
        text-decoration: none;
    }

    a:hover {
        text-decoration: underline;
    }

    .alert {
        border-radius: 0.5rem;
    }
</style>

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card-delete">
                <h2>Eliminar Usuario</h2>
                <h4>¿Estás seguro que deseas eliminar este registro?</h4>
                <hr />

                <dl class="row mb-0">
                    <dt class="col-sm-4 text-label">Nombre:</dt>
                    <dd class="col-sm-8 text-value">@Html.DisplayFor(model => model.Nombre)</dd>

                    <dt class="col-sm-4 text-label">Email:</dt>
                    <dd class="col-sm-8 text-value">@Html.DisplayFor(model => model.Email)</dd>

                    <dt class="col-sm-4 text-label">Contraseña:</dt>
                    <dd class="col-sm-8 text-value">@Html.DisplayFor(model => model.PasswordHash)</dd>

                    <dt class="col-sm-4 text-label">Estado:</dt>
                    <dd class="col-sm-8 text-value">@Html.DisplayFor(model => model.Estado)</dd>
                </dl>

                @if (ViewData["ErrorMessage"] != null)
                {
                    <div class="alert alert-danger">
                        @ViewData["ErrorMessage"]
                    </div>
                }

                <form asp-action="Delete" class="mt-4 d-flex justify-content-between">
                    <input type="hidden" asp-for="UsuarioId" />
                    <input type="submit" value="Eliminar" class="btn btn-danger text-white" />
                    <a asp-action="Index" class="btn btn-secondary">Volver</a>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
